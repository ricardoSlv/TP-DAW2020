doctype html
html
  head
    title Daw Docs
    meta(charset='utf-8')
    link(rel='icon' href='/favicon.ico')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js' integrity='sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW' crossorigin='anonymous')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    link(rel='stylesheet' href='/stylesheets/styles.css')
    script(type='module' src='https://unpkg.com/ionicons@5.2.3/dist/ionicons/ionicons.esm.js')
    script(nomodule='' src='https://unpkg.com/ionicons@5.2.3/dist/ionicons/ionicons.js')
  body
    header
        nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.px-4
          a.navbar-brand(href='/')
            | Daw Docs
          button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarContent.collapse.navbar-collapse
            ul.navbar-nav.me-auto
              li.nav-item
                a.nav-link.d-flex.align-items-center.mb-0(href='/')
                  ion-icon.px-1(name='home-outline')
                  h5.mb-0 Home 
              li.nav-item
                a.nav-link.d-flex.align-items-center.mb-0(href='https://github.com/ricardoSlv/TP-DAW2020')
                  ion-icon.px-1(name='logo-github')
                  h5.mb-0 Github

              if(user)
                li.nav-item
                  a.nav-link.d-flex.align-items-center.mb-0(href='/users')
                    ion-icon.px-1(name='people-circle')
                    h5.mb-0 Users
                li.nav-item
                  a.nav-link.d-flex.align-items-center.mb-0(href='/posts/')
                    ion-icon.px-1(name='document-text')
                    h5.mb-0 Posts
                li.nav-item
                  a.nav-link.d-flex.align-items-center.mb-0(href='/resources/')
                    ion-icon.px-1(name='folder')
                    h5.mb-0 Resources
                li.nav-item
                  a.nav-link.d-flex.align-items-center.mb-0(href='/users/profile')
                    ion-icon.px-1(name='person-circle')
                    h5.mb-0 Profile
                li.nav-item
                  a.nav-link.d-flex.align-items-center.mb-0(href='/logout')
                    ion-icon.px-1(name='log-out')
                    h5.mb-0 Logout
                if(user.level.localeCompare('ADMN')==0)
                  li.nav-item
                    a.nav-link.d-flex.align-items-center.mb-0(href='/admin')
                      ion-icon.px-1(name='shield-half')
                      h5.mb-0 Admin

              else
                li.nav-item
                  a.nav-link.d-flex.align-items-center.mb-0(href='/login')
                    ion-icon.px-1(name='log-in')
                    h5.mb-0='Login'
                li.nav-item
                  a.nav-link.d-flex.align-items-center.mb-0(href='/signup')
                    ion-icon.px-1(name='person-add')
                    h5.mb-0='Signup'

            span.navbar-text.h5.mb-0
              | DAW 2020
    main
      block content
    footer.bg-primary.py-1.px-4
      h3.text-light Document Managing DAW 2020

