extends ../layout

block content
  section.container
    .row.justify-content-center
      h1.mt-3.text-center='Edit Resource'
      form#resourceEdit.col-lg-8(method='post')

        input#idInput(type='hidden' name='id' value=resource._id)

        label.form-label(for='titleInput') Title
        input#titleInput.mb-3.form-control(type='text' name='title' value=resource.title required readonly)

        label.form-label(for='subtitleInput') Subtitle
        input#subtitleInput.mb-3.form-control(type='text' name='subtitle' value=resource.subtitle)

        label.form-label(for='themesRadio') Type
        br
        if (resource.type ==('REPORT'))
          .form-check.form-check-inline
            input#themesRadio.form-check-input(type='radio' name='type' value='REPORT' checked)
            label.form-check-label(for='themesRadio')
              | Report
        else
          .form-check.form-check-inline
            input#themesRadio.form-check-input(type='radio' name='type' value='REPORT')
            label.form-check-label(for='themesRadio')
              | Report
        if (resource.type ==('THESIS'))
          .form-check.form-check-inline
            input#thesisRadio.form-check-input(type='radio' name='type' value='THESIS' checked)
            label.mb-3.form-check-label(for='thesisRadio')
              | Thesis
        else
          .form-check.form-check-inline
            input#thesisRadio.form-check-input(type='radio' name='type' value='THESIS')
