            label.mb-3.form-check-label(for='testRadio')
              | Test
        else
          .form-check.form-check-inline
            input#testRadio.form-check-input(type='radio' name='type' value='TEST')
            label.mb-3.form-check-label(for='testRadio')
              | Test
        if (resource.type ==('SOLVEDPROB'))
          .form-check.form-check-inline
            input#solvedproblemRadio.form-check-input(type='radio' name='type' value='SOLVEDPROB' checked)
            label.mb-3.form-check-label(for='solvedproblemRadio')
