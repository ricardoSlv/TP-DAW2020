extends ../layout

block content
  section.container
    .row.justify-content-center
      h1.mt-3.text-center='Login'
      form#loginform.col-lg-8(method="post" enctype="multipart/form-data")

        label.form-label(for='emailInput') Email address
        input#emailInput.form-control(type='email' name='email' aria-describedby='emailHelp')
        #emailHelp.form-text.mb-3 We'll never share your email with anyone else.

        label.form-label(for='passInput') Password
        input#passInput.form-control.mb-3(type='password' name='password' )

        input#remember.form-check-input.me-2(type='checkbox' name='remember')
        label.form-check-label.mb-3(for='remember' ) Remember me

        button.btn.btn-primary.btn-block.w-100(type='submit') Login

  script(src='/javascripts/auth/login.js')


